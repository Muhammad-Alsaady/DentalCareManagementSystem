@model DentalCareManagmentSystem.Application.DTOs.AppointmentDto

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Appointment ID:</div>
    <div class="col-md-8"><code>@Model.Id</code></div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Patient Name:</div>
    <div class="col-md-8">
        <i class="fas fa-user"></i> @Model.PatientName
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Patient Phone:</div>
    <div class="col-md-8">
        <a href="tel:@Model.PatientPhone"><i class="fas fa-phone"></i> @Model.PatientPhone</a>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Appointment Date:</div>
    <div class="col-md-8">
        <i class="fas fa-calendar"></i> @Model.Date.ToString("dddd, MMMM dd, yyyy")
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Time Slot:</div>
    <div class="col-md-8">
        <i class="fas fa-clock"></i> @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Status:</div>
    <div class="col-md-8">
        @{
            var badgeClass = Model.Status switch
            {
                "Scheduled" => "bg-info",
                "Notified" => "bg-warning",
                "Completed" => "bg-success",
                "Cancelled" => "bg-danger",
                _ => "bg-secondary"
            };
        }
        <span class="badge @badgeClass">@Model.Status</span>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Notes))
{
    <div class="row mb-3">
        <div class="col-md-4 fw-bold">Notes:</div>
        <div class="col-md-8">
            <div class="alert alert-info mb-0">
                <i class="fas fa-sticky-note"></i> @Model.Notes
            </div>
        </div>
    </div>
}

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="fas fa-times"></i> Close
    </button>
    
    @if (Model.Status == "Scheduled")
    {
        <button type="button" onclick="detailsModal.hide(); sendToDoctor('@Model.Id', '@Model.PatientName');" class="btn btn-success">
            <i class="fas fa-paper-plane"></i> Send to Doctor
        </button>
    }
    
    @if (Model.Status == "Notified")
    {
        <button type="button" onclick="detailsModal.hide(); completeAppointment('@Model.Id', '@Model.PatientName');" class="btn btn-primary">
            <i class="fas fa-check"></i> Mark as Completed
        </button>
    }
</div>
