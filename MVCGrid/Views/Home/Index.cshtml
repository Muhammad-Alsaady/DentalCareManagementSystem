@model DentalManagementSystem.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4">
            <i class="fas fa-tachometer-alt me-3"></i>Dashboard
        </h1>
        <p class="lead text-muted">Welcome to Dental Care Management System</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Total Patients</h6>
                        <h2 class="card-title mb-0">@Model.TotalPatients</h2>
                    </div>
                    <div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Patients" asp-action="Index" class="text-white text-decoration-none">
                    View All Patients <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Today's Appointments</h6>
                        <h2 class="card-title mb-0">@Model.TodayAppointments</h2>
                    </div>
                    <div>
                        <i class="fas fa-calendar-check fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Appointments" asp-action="Index" class="text-white text-decoration-none">
                    View Appointments <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-warning text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">Pending Appointments</h6>
                        <h2 class="card-title mb-0">@Model.PendingAppointments</h2>
                    </div>
                    <div>
                        <i class="fas fa-clock fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Notifications" asp-action="Index" class="text-white text-decoration-none">
                    View Queue <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Patients" asp-action="Index" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-user-plus fa-2x mb-2 d-block"></i>
                            New Patient
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Appointments" asp-action="Index" class="btn btn-outline-success btn-lg w-100">
                            <i class="fas fa-calendar-plus fa-2x mb-2 d-block"></i>
                            New Appointment
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Notifications" asp-action="Queue" class="btn btn-outline-info btn-lg w-100">
                            <i class="fas fa-bell fa-2x mb-2 d-block"></i>
                            Patient Queue
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-warning btn-lg w-100">
                            <i class="fas fa-chart-line fa-2x mb-2 d-block"></i>
                            View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Patients & Today's Appointments -->
<div class="row">
    <!-- Recent Patients -->
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>Recent Patients
                </h5>
            </div>
            <div class="card-body">
                @if (Model.RecentPatients != null && Model.RecentPatients.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var patient in Model.RecentPatients)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">
                                        <i class="fas fa-user-circle text-primary me-2"></i>@patient.FullName
                                    </h6>
                                    <small class="text-muted">
                                        <i class="fas fa-phone me-1"></i>@patient.Phone
                                        <span class="ms-3">
                                            <i class="fas fa-birthday-cake me-1"></i>Age: @patient.Age
                                        </span>
                                    </small>
                                </div>
                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@patient.Id" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-light">
                        <a asp-controller="Patients" asp-action="Index" class="btn btn-sm btn-primary w-100">
                            View All Patients
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No patients yet</p>
                        <a asp-controller="Patients" asp-action="Index" class="btn btn-primary">
                            Add First Patient
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Today's Appointments -->
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>Today's Appointments
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TodayAppointmentsList != null && Model.TodayAppointmentsList.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var appointment in Model.TodayAppointmentsList.OrderBy(a => a.StartTime).Take(5))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            <i class="fas fa-user text-success me-2"></i>@appointment.PatientName
                                        </h6>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>@appointment.StartTime.ToString(@"hh\:mm")
                                            @if (appointment.Status == "Scheduled")
                                            {
                                                <span class="badge bg-info ms-2">Scheduled</span>
                                            }
                                            else if (appointment.Status == "Completed")
                                            {
                                                <span class="badge bg-success ms-2">Completed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning ms-2">@appointment.Status</span>
                                            }
                                        </small>
                                    </div>
                                    <a asp-controller="Appointments" asp-action="Index" 
                                       class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-light">
                        <a asp-controller="Appointments" asp-action="Index" class="btn btn-sm btn-success w-100">
                            View All Appointments
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No appointments for today</p>
                        <a asp-controller="Appointments" asp-action="Index" class="btn btn-success">
                            Schedule Appointment
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .btn-lg {
        padding: 1.5rem 1rem;
        border-width: 2px;
    }

    .btn-lg:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease;
    }

    .list-group-item {
        border-left: none;
        border-right: none;
    }

    .list-group-item:first-child {
        border-top: none;
    }

    .opacity-75 {
        opacity: 0.75;
    }

    .opacity-50 {
        opacity: 0.5;
    }
</style>
