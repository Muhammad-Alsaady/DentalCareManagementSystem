@model List<DentalCareManagmentSystem.Application.DTOs.AppointmentDto>
@{
    ViewData["Title"] = "Receptionist Dashboard";
    var selectedDate = ViewBag.SelectedDate as DateTime? ?? DateTime.Today;
    var isToday = selectedDate.Date == DateTime.Today.Date;
}

<div class="container-fluid dashboard-page">
    @Html.AntiForgeryToken()
    
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-header">
                <div class="header-content">
                    <div class="header-left">
                        <h1 class="page-title">
                            <i class="fas fa-tachometer-alt text-primary"></i> 
                            Receptionist Dashboard
                        </h1>
                        <p class="page-subtitle">
                            <i class="fas fa-calendar"></i> 
                            @if (isToday)
                            {
                                <text>Today - @selectedDate.ToString("dddd, MMMM dd, yyyy")</text>
                            }
                            else
                            {
                                @selectedDate.ToString("dddd, MMMM dd, yyyy")
                            }
                            <span class="badge bg-primary ms-2 fs-6">@Model.Count Appointments</span>
                        </p>
                    </div>
                    <div class="header-actions">
                        <button class="btn btn-success btn-lg shadow-sm" onclick="addNewPatient()">
                            <i class="fas fa-user-plus"></i> Add Patient
                        </button>
                        <button class="btn btn-primary btn-lg shadow-sm" onclick="addNewAppointment()">
                            <i class="fas fa-calendar-plus"></i> New Appointment
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Date Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="date-filter-card">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <label class="filter-label">
                            <i class="fas fa-calendar-alt"></i> Select Date
                        </label>
                        <div class="input-group input-group-lg date-picker-group">
                            <span class="input-group-text">
                                <i class="fas fa-calendar-day"></i>
                            </span>
                            <input type="text" 
                                   id="dashboardDatePicker" 
                                   class="form-control form-control-lg" 
                                   value="@selectedDate.ToString("MM/dd/yyyy")"
                                   placeholder="Select date..."
                                   readonly>
                            <button class="btn btn-primary" type="button" onclick="goToToday()">
                                <i class="fas fa-calendar-check"></i> Today
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <button class="btn btn-outline-secondary btn-lg" onclick="refreshGrid()">
                            <i class="fas fa-sync-alt"></i> Refresh
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4 stats-row">
        <div class="col-md-3">
            <div class="stat-card stat-card-total">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h2 class="stat-number">@ViewBag.TotalPatients</h2>
                    <p class="stat-label">Total Appointments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-scheduled">
                <div class="stat-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-content">
                    <h2 class="stat-number">@ViewBag.Scheduled</h2>
                    <p class="stat-label">Scheduled</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-completed">
                <div class="stat-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-content">
                    <h2 class="stat-number">@ViewBag.Completed</h2>
                    <p class="stat-label">Completed</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-notified">
                <div class="stat-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <div class="stat-content">
                    <h2 class="stat-number">@ViewBag.Notified</h2>
                    <p class="stat-label">Notified</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointments Grid -->
    <div class="row">
        <div class="col-12">
            <div class="grid-card shadow">
                <div class="grid-card-header">
                    <h4 class="grid-title">
                        <i class="fas fa-list-ul"></i> Appointments for @selectedDate.ToString("MMMM dd, yyyy")
                    </h4>
                </div>
                <div class="grid-card-body" id="dashboardGridContainer">
                    @await Html.PartialAsync("_DashboardGrid", Model)
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Datepicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Initialize datepicker
            $('#dashboardDatePicker').datepicker({
                format: 'mm/dd/yyyy',
                autoclose: true,
                todayHighlight: true,
                todayBtn: 'linked',
                orientation: 'bottom auto'
            }).on('changeDate', function(e) {
                var selectedDate = e.format('yyyy-mm-dd');
                loadAppointmentsForDate(selectedDate);
            });

            // Make entire input group clickable
            $('.date-picker-group').on('click', function(e) {
                if (e.target.tagName !== 'BUTTON') {
                    $('#dashboardDatePicker').datepicker('show');
                }
            });

            // Listen for modal success events
            $(document).on('modalSuccess', function(event, response) {
                refreshGrid();
            });

            console.log('Dashboard initialized');
        });

        // Load appointments for selected date
        function loadAppointmentsForDate(date) {
            $.ajax({
                url: '@Url.Action("Dashboard", "Appointments")',
                data: { selectedDate: date },
                success: function(html) {
                    // Reload entire page to update stats
                    window.location.href = '@Url.Action("Dashboard", "Appointments")?selectedDate=' + date;
                },
                error: function() {
                    UIHelpers.showAlert('Error loading appointments', 'danger');
                }
            });
        }

        // Refresh grid only
        function refreshGrid() {
            var currentDate = $('#dashboardDatePicker').val();
            var dateFormatted = new Date(currentDate).toISOString().split('T')[0];
            
            $.ajax({
                url: '@Url.Action("GetDashboardGrid", "Appointments")',
                data: { selectedDate: dateFormatted },
                success: function(html) {
                    $('#dashboardGridContainer').html(html);
                },
                error: function() {
                    UIHelpers.showAlert('Error refreshing grid', 'danger');
                }
            });
        }

        // Go to today
        function goToToday() {
            var today = new Date();
            $('#dashboardDatePicker').datepicker('setDate', today);
            loadAppointmentsForDate(today.toISOString().split('T')[0]);
        }

        // Add New Patient
        function addNewPatient() {
            ModalLoader.load(
                '@Url.Action("Create", "Patients")',
                'Add New Patient'
            );
        }

        // Add New Appointment
        function addNewAppointment(patientId) {
            var url = '@Url.Action("Create", "Appointments")';
            if (patientId) {
                url += '?patientId=' + patientId;
            }
            
            ModalLoader.load(url, 'New Appointment');
        }

        // Edit Paid Amount
        function editPaidAmount(appointmentId) {
            ModalLoader.load(
                '@Url.Action("EditPaidAmount", "Appointments")/' + appointmentId,
                'Edit Payment Amount'
            );
        }

        // View Patient Card
        function viewPatientCard(patientId, patientName) {
            ModalLoader.load(
                '@Url.Action("Details", "Patients")/' + patientId,
                'Patient Details: ' + patientName
            );
        }

        // Add Payment
        function addPayment(patientId, patientName) {
            ModalLoader.load(
                '@Url.Action("AddPayment", "Payments")?patientId=' + patientId,
                'Add Payment: ' + patientName
            );
        }

        // Show Edit Form
        function showEdit(id) {
            ModalLoader.load(
                '@Url.Action("Edit", "Appointments")/' + id,
                'Edit Appointment'
            );
        }

        // Show Delete Confirmation
        function showDelete(id) {
            ModalLoader.load(
                '@Url.Action("Delete", "Appointments")/' + id,
                'Delete Appointment'
            );
        }

        // Show Details
        function showDetails(id) {
            ModalLoader.load(
                '@Url.Action("Details", "Appointments")/' + id,
                'Appointment Details'
            );
        }
    </script>
}

@section Styles {
    <style>
