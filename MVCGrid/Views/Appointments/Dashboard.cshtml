        }

        .filter-label i {
            color: #2563eb;
            margin-right: 8px;
        }

        .date-picker-group {
            cursor: pointer;
        }

        .date-picker-group .input-group-text {
            background: #2563eb;
            color: white;
            border: none;
            font-size: 1.2rem;
        }

        .date-picker-group .form-control {
            border: 2px solid #e5e7eb;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
        }

        .date-picker-group .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

        /* Stats Cards */
        .stats-row {
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            display: flex;
            align-items: center;
            gap: 20px;
            transition: all 0.3s ease;
            border-left: 5px solid #e5e7eb;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        }

        .stat-icon {
            width: 75px;
            height: 75px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.2rem;
        }

        .stat-content {
            flex: 1;
        }

        .stat-number {
            font-size: 2.8rem;
            font-weight: 700;
            margin: 0;
            line-height: 1;
        }

        .stat-label {
            font-size: 1rem;
            color: #6b7280;
            margin: 10px 0 0 0;
            font-weight: 500;
        }

        /* Stat card variants */
        .stat-card-total {
            border-left-color: #3b82f6;
        }
        .stat-card-total .stat-icon {
            background: rgba(59, 130, 246, 0.1);
            color: #3b82f6;
        }
        .stat-card-total .stat-number {
            color: #3b82f6;
        }

        .stat-card-scheduled {
            border-left-color: #0ea5e9;
        }
        .stat-card-scheduled .stat-icon {
            background: rgba(14, 165, 233, 0.1);
            color: #0ea5e9;
        }
        .stat-card-scheduled .stat-number {
            color: #0ea5e9;
        }

        .stat-card-completed {
            border-left-color: #10b981;
        }
        .stat-card-completed .stat-icon {
            background: rgba(16, 185, 129, 0.1);
            color: #10b981;
        }
        .stat-card-completed .stat-number {
            color: #10b981;
        }

        .stat-card-notified {
            border-left-color: #f59e0b;
        }
        .stat-card-notified .stat-icon {
            background: rgba(245, 158, 11, 0.1);
            color: #f59e0b;
        }
        .stat-card-notified .stat-number {
            color: #f59e0b;
        }

        /* Grid Card */
        .grid-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
        }

        .grid-card-header {
            background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
            padding: 20px 30px;
            border-bottom: none;
        }

        .grid-title {
            color: white;
            margin: 0;
            font-size: 1.3rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .grid-card-body {
            padding: 0;
        }

        /* Datepicker customization */
        .datepicker {
            border-radius: 8px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }

        .datepicker table tr td.today {
            background: #3b82f6;
            color: white;
        }

        .datepicker table tr td.active {
            background: #1e40af;
            color: white;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .header-content {
                flex-direction: column;
                align-items: flex-start;
            }

            .header-actions {
                width: 100%;
            }

            .header-actions .btn {
                flex: 1;
            }
        }

        @@media (max-width: 768px) {
            .page-title {
                font-size: 1.8rem;
            }

            .stat-card {
                padding: 20px;
            }

            .stat-icon {
                width: 65px;
                height: 65px;
                font-size: 1.8rem;
            }

            .stat-number {
                font-size: 2.2rem;
            }
        }
    </style>
}
