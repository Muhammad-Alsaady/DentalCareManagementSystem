@model Person

<div class="row mb-3">
    <div class="col-md-4 fw-bold">ID:</div>
    <div class="col-md-8">@Model.Id</div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">First Name:</div>
    <div class="col-md-8">@Model.FirstName</div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Last Name:</div>
    <div class="col-md-8">@Model.LastName</div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Email:</div>
    <div class="col-md-8"><a href="mailto:@Model.Email">@Model.Email</a></div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Phone:</div>
    <div class="col-md-8"><a href="tel:@Model.Phone">@Model.Phone</a></div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Department:</div>
    <div class="col-md-8">
        <span class="badge bg-primary">@Model.Department</span>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Date of Birth:</div>
    <div class="col-md-8">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Age:</div>
    <div class="col-md-8">@((DateTime.Now.Year - Model.DateOfBirth.Year)) years old</div>
</div>

<div class="row mb-3">
    <div class="col-md-4 fw-bold">Status:</div>
    <div class="col-md-8">
        @if (Model.IsActive)
        {
            <span class="badge bg-success">
                <i class="fas fa-check-circle"></i> Active
            </span>
        }
        else
        {
            <span class="badge bg-danger">
                <i class="fas fa-times-circle"></i> Inactive
            </span>
        }
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="fas fa-times"></i> Close
    </button>
    <button type="button" onclick="crudModal.hide(); showEdit(@Model.Id);" class="btn btn-primary">
        <i class="fas fa-edit"></i> Edit
    </button>
    <button type="button" onclick="crudModal.hide(); showDelete(@Model.Id);" class="btn btn-danger">
        <i class="fas fa-trash"></i> Delete
    </button>
</div>
