@model DentalCareManagmentSystem.Application.DTOs.PatientPaymentSummaryDto

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Payment Summary - @Model.PatientName</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Total Treatment Cost</h6>
                        <h3 class="text-info">@Model.TotalCost.ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Total Paid</h6>
                        <h3 class="text-success">@Model.TotalPaid.ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card @(Model.RemainingBalance > 0 ? "border-danger" : "border-success")">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Remaining Balance</h6>
                        <h3 class="@(Model.RemainingBalance > 0 ? "text-danger" : "text-success")">
                            @Model.RemainingBalance.ToString("C")
                        </h3>
                    </div>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Receptionist") || User.IsInRole("SystemAdmin"))
        {
            <div class="mb-3">
                <button class="btn btn-primary" onclick="addPayment('@Model.PatientId')">
                    <i class="fas fa-plus"></i> Add Payment
                </button>
            </div>
        }

        <h5 class="mt-3">Payment History</h5>
        <hr />
        
        @if (Model.Payments.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Notes</th>
                            <th>Created By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments)
                        {
                            <tr>
                                <td>@payment.PaymentDate.ToString("dd/MM/yyyy")</td>
                                <td><strong>@payment.Amount.ToString("C")</strong></td>
                                <td>@payment.Notes</td>
                                <td>@payment.CreatedByName</td>
                                <td>
                                    <a href="@Url.Action("PrintReceipt", "Payments", new { id = payment.Id })" 
                                       class="btn btn-sm btn-info" target="_blank">
                                        <i class="fas fa-print"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No payments recorded yet.
            </div>
        }
    </div>
</div>

<script>
    function addPayment(patientId) {
        $.get('@Url.Action("AddPayment", "Payments")', { patientId: patientId }, function (data) {
            $('#modalContainer').html(data);
            $('#actionModal').modal('show');
        });
    }

    function refreshPaymentData() {
        var patientId = '@Model.PatientId';
        $.get('@Url.Action("GetPatientPaymentSummary", "Payments")', { patientId: patientId }, function (data) {
            $('#paymentSummaryContainer').html(data);
        });
    }
</script>
