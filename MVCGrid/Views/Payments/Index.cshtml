@model List<DentalCareManagmentSystem.Application.DTOs.PaymentTransactionDto>
@{
    ViewData["Title"] = "Payment History";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-money-bill-wave"></i> Payment History</h2>
                <div>
                    <button class="btn btn-outline-primary" onclick="UIHelpers.reloadGridPartial('#gridContainer', '@Url.Action("GetPaymentsGrid")')">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body" id="gridContainer">
                    @await Html.PartialAsync("_PaymentHistoryGrid", Model)
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable auto-refresh every 15 seconds
            UIHelpers.enableAutoRefresh(
                'PaymentHistoryGrid',
                '#gridContainer',
                '@Url.Action("GetPaymentsGrid")'
            );
        });

        function deletePayment(paymentId) {
            UIHelpers.loadModal(
                '@Url.Action("DeletePayment", "Payments")' + '?id=' + paymentId,
                'Delete Payment'
            );
        }

        // Cleanup on page unload
        $(window).on('beforeunload', function() {
            UIHelpers.disableAutoRefresh('PaymentHistoryGrid');
        });
    </script>
}
