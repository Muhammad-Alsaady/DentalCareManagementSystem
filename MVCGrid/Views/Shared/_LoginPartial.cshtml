@using Microsoft.AspNetCore.Identity
@using DentalCareManagmentSystem.Domain.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav ms-auto">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var userRoles = await UserManager.GetRolesAsync(user);
    var roleName = userRoles.FirstOrDefault() ?? "User";
    
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="user-avatar me-2">
                <i class="fas fa-user-circle fa-lg"></i>
            </div>
            <div class="d-none d-md-block">
                <div class="user-name">@(user?.FullName ?? User.Identity?.Name)</div>
                <small class="user-role text-muted">@roleName</small>
            </div>
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
            <li class="dropdown-header">
                <div class="text-center">
                    <i class="fas fa-user-circle fa-3x text-primary mb-2"></i>
                    <h6 class="mb-0">@(user?.FullName ?? "User")</h6>
                    <small class="text-muted">@user?.Email</small>
                </div>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="px-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-user-plus me-1"></i> Register
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-primary text-white ms-2" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt me-1"></i> Login
        </a>
    </li>
}
</ul>

<style>
    .user-avatar {
        color: #0d6efd;
    }
    
    .user-name {
        font-size: 0.9rem;
        font-weight: 500;
        color: #333;
    }
    
    .user-role {
        font-size: 0.75rem;
        display: block;
    }
    
    .dropdown-menu {
        min-width: 280px;
        border: none;
        border-radius: 0.5rem;
    }
    
    .dropdown-header {
        padding: 1rem;
        background-color: #f8f9fa;
    }
    
    .dropdown-item {
        padding: 0.6rem 1rem;
        transition: all 0.3s ease;
    }
    
    .dropdown-item:hover {
        background-color: #f8f9fa;
        padding-left: 1.5rem;
    }
    
    .dropdown-item i {
        width: 20px;
        text-align: center;
    }
</style>


