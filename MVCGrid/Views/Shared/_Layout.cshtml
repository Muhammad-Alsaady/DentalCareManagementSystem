@using DentalManagementSystem.Models
@{
    var menuItems = new List<MenuItem>
    {
        MenuItem.Create("Dashboard", Url.Action("Index", "Home"), "fas fa-home"),
        MenuItem.Create("Patients", Url.Action("Index", "Patients"), "fas fa-users"),
        MenuItem.Create("Appointments", Url.Action("Index", "Appointments"), "fas fa-calendar-alt"),
        MenuItem.Create("Payments", Url.Action("Index", "Payments"), "fas fa-money-bill-wave", true),
        MenuItem.Create("Notifications", Url.Action("Index", "Notifications"), "fas fa-bell"),
        MenuItem.Create("Treatment Plans", Url.Action("Index", "TreatmentPlans"), "fas fa-medkit"),
        MenuItem.Create("Reports", Url.Action("Index", "Reports"), "fas fa-chart-line")
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dental Care Management</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/cerulean/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/mvc-grid/mvc-grid.css" />
    <link rel="stylesheet" href="~/css/footable.standalone.min.css" />
    <link rel="stylesheet" href="~/css/left-menu.css" />
    <link rel="stylesheet" href="~/css/login-partial.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/topbar.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Slim Top Bar -->
    <div class="topbar">
        <div class="topbar-left">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <span class="topbar-brand">
                <i class="fas fa-tooth"></i>
                <span class="brand-name">Dental Care Management</span>
            </span>
        </div>
        <div class="topbar-center">
            <a href="@Url.Action("TodaysPatients", "Appointments")" class="btn btn-todays-patients">
                <i class="fas fa-calendar-day"></i>
                <span class="btn-text">Today's Patients</span>
            </a>
        </div>
        <div class="topbar-right">
            <div class="topbar-clock">
                <i class="fas fa-clock"></i>
                <span id="liveClock">Loading...</span>
            </div>
            <div class="topbar-divider"></div>
            <partial name="_LoginPartial" />
        </div>
    </div>

    <!-- Left Sidebar -->
    @await Html.PartialAsync("_LeftMenu", menuItems)

    <!-- Main Content Wrapper -->
    <div class="main-wrapper">
        <div class="main-content container-fluid">
            @RenderBody()
        </div>
    </div>

    <!-- Global Unified Modal -->
    @await Html.PartialAsync("_GlobalModal")

    <!-- Alert Container -->
    <div id="alertContainer"></div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/mvc-grid/mvc-grid.js"></script>
    <script src="~/js/footable.min.js"></script>
    <script src="~/js/left-menu.js"></script>
    <script src="~/js/layout.js"></script>
    <script src="~/js/layout-clock.js"></script>
    <script src="~/js/ui-helpers.js"></script>
    <script src="~/js/modal-loader.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>