@using DentalManagementSystem.Models
@{
    var menuItems = new List<MenuItem>
    {
        MenuItem.Create("Dashboard", Url.Action("Index", "Home"), "fas fa-home"),
        MenuItem.Create("Patients", Url.Action("Index", "Patients"), "fas fa-users"),
        MenuItem.Create("Appointments", Url.Action("Index", "Appointments"), "fas fa-calendar-alt"),
        MenuItem.Create("Payments", Url.Action("Index", "Payments"), "fas fa-money-bill-wave", true),
        MenuItem.Create("Notifications", Url.Action("Index", "Notifications"), "fas fa-bell"),
        MenuItem.Create("Treatment Plans", Url.Action("Index", "TreatmentPlans"), "fas fa-medkit"),
        MenuItem.Create("Reports", Url.Action("Index", "Reports"), "fas fa-chart-line")
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dental Care Management</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/cerulean/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/mvc-grid/mvc-grid.css" />
    <link rel="stylesheet" href="~/css/footable.standalone.min.css" />
    <link rel="stylesheet" href="~/css/left-menu.css" />
    <link rel="stylesheet" href="~/css/login-partial.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-tooth me-2"></i>Dental Care
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Patients" asp-action="Index">
                            <i class="fas fa-users me-1"></i>Patients
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                            <i class="fas fa-calendar-alt me-1"></i>Appointments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Payments" asp-action="Index">
                            <i class="fas fa-money-bill-wave me-1"></i>Payments
                            <span class="badge bg-success">New</span>
                        </a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    @await Html.PartialAsync("_LeftMenu", menuItems)

    <div class="main-wrapper">
        <div class="main-content container">
            @RenderBody()
        </div>
    </div>

    <!-- Modal Container -->
    <div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" id="modalContainer">
                <!-- Modal content will be loaded here -->
            </div>
        </div>
    </div>

    <!-- Alert Container -->
    <div id="alertContainer" style="position: fixed; top: 80px; right: 20px; z-index: 9999; min-width: 300px;">
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/mvc-grid/mvc-grid.js"></script>
    <script src="~/js/footable.min.js"></script>
    <script src="~/js/left-menu.js"></script>
    <script src="~/js/layout.js"></script>
    
    <script>
        // Global function to show alerts
        function showAlert(type, message) {
            var alertHtml = '<div class="alert alert-' + type + ' alert-dismissible fade show" role="alert">' +
                message +
                '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                '</div>';
            
            $('#alertContainer').append(alertHtml);
            
            setTimeout(function() {
                $('.alert').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>