@model List<MenuItem>

<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <a href="@Url.Action("Index", "Home")" class="brand">
            <i class="fas fa-th-large"></i>
            <span class="brand-text">MVC Grid Demo</span>
        </a>
    </div>

    <div class="sidebar-profile">
        <div class="profile-avatar">
            <i class="fas fa-user-circle fa-3x"></i>
        </div>
        <div class="profile-info">
            <span class="welcome-text">Welcome</span>
            <h4>@(User?.Identity?.Name ?? "Guest")</h4>
        </div>
    </div>

    <nav class="sidebar-menu">
        <h3 class="menu-title">MAIN NAVIGATION</h3>
        <ul class="nav-list">
            @foreach (var item in Model)
            {
                if (item.SubItems != null && item.SubItems.Any())
                {
                    <li class="nav-item has-submenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <i class="@item.Icon"></i>
                            <span>@item.Title</span>
                            <i class="fas fa-chevron-down submenu-arrow"></i>
                        </a>
                        <ul class="submenu">
                            @foreach (var subItem in item.SubItems)
                            {
                                <li>
                                    <a href="@subItem.Url" class="submenu-link">
                                        <i class="@subItem.Icon"></i>
                                        <span>@subItem.Title</span>
                                        @if (subItem.IsNew)
                                        {
                                            <span class="badge bg-danger">New</span>
                                        }
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="@item.Url" class="nav-link">
                            <i class="@item.Icon"></i>
                            <span>@item.Title</span>
                            @if (item.IsNew)
                            {
                                <span class="badge bg-danger">New</span>
                            }
                        </a>
                    </li>
                }
            }
        </ul>
    </nav>
</div>

<!-- Overlay for mobile -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>


