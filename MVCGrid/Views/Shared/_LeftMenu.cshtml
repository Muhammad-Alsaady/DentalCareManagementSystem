@model List<MenuItem>

<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <a href="@Url.Action("Index", "Home")" class="brand">
            <i class="fas fa-th-large"></i>
            <span class="brand-text">MVC Grid Demo</span>
        </a>
    </div>

    <div class="sidebar-profile">
        <div class="profile-avatar">
            <i class="fas fa-user-circle fa-3x"></i>
        </div>
        <div class="profile-info">
            <span class="welcome-text">Welcome</span>
            <h4>@(User?.Identity?.Name ?? "Guest")</h4>
        </div>
    </div>

    <nav class="sidebar-menu">
        <h3 class="menu-title">MAIN NAVIGATION</h3>
        <ul class="nav-list">
            @foreach (var item in Model)
            {
                if (item.SubItems != null && item.SubItems.Any())
                {
                    <li class="nav-item has-submenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <i class="@item.Icon"></i>
                            <span>@item.Title</span>
                            <i class="fas fa-chevron-down submenu-arrow"></i>
                        </a>
                        <ul class="submenu">
                            @foreach (var subItem in item.SubItems)
                            {
                                <li>
                                    <a href="@subItem.Url" class="submenu-link">
                                        <i class="@subItem.Icon"></i>
                                        <span>@subItem.Title</span>
                                        @if (subItem.IsNew)
                                        {
                                            <span class="badge bg-danger">New</span>
                                        }
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="@item.Url" class="nav-link">
                            <i class="@item.Icon"></i>
                            <span>@item.Title</span>
                            @if (item.IsNew)
                            {
                                <span class="badge bg-danger">New</span>
                            }
                        </a>
                    </li>
                }
            }
        </ul>
    </nav>
</div>

<!-- Overlay for mobile -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>

<style>
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        width: 260px;
        background: linear-gradient(180deg, #1e3a5f 0%, #2c5282 100%);
        color: white;
        overflow-y: auto;
        overflow-x: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        z-index: 1040;
        box-shadow: 4px 0 15px rgba(0,0,0,0.2);
    }

    .sidebar-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        z-index: 1030;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .sidebar-header {
        padding: 20px 15px;
        background: rgba(0,0,0,0.3);
        border-bottom: 2px solid rgba(255,255,255,0.1);
    }

    .brand {
        color: white;
        text-decoration: none;
        font-size: 1.3rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: color 0.3s;
    }

    .brand:hover {
        color: #60a5fa;
    }

    .brand i {
        font-size: 1.5rem;
    }

    .brand-text {
        white-space: nowrap;
        letter-spacing: 0.5px;
    }

    .sidebar-profile {
        padding: 25px 15px;
        text-align: center;
        border-bottom: 2px solid rgba(255,255,255,0.1);
        background: rgba(0,0,0,0.15);
    }

    .profile-avatar {
        color: #60a5fa;
        margin-bottom: 12px;
        animation: fadeIn 0.5s ease-in;
    }

    .profile-info {
        color: white;
    }

    .welcome-text {
        font-size: 0.85rem;
        color: #cbd5e1;
        display: block;
        margin-bottom: 5px;
    }

    .profile-info h4 {
        margin: 0;
        font-size: 1.1rem;
        color: white;
        font-weight: 600;
    }

    .sidebar-menu {
        padding: 15px 0;
    }

    .menu-title {
        font-size: 0.7rem;
        font-weight: 700;
        color: #94a3b8;
        padding: 15px 20px 10px;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    .nav-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .nav-item {
        margin: 0;
    }

    .nav-link {
        display: flex;
        align-items: center;
        padding: 14px 20px;
        color: #e2e8f0;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        font-size: 0.95rem;
        border-left: 3px solid transparent;
    }

    .nav-link:hover {
        background: rgba(96, 165, 250, 0.15);
        color: white;
        border-left-color: #60a5fa;
        padding-left: 25px;
    }

    .nav-link.active {
        background: linear-gradient(90deg, rgba(59, 130, 246, 0.3) 0%, rgba(37, 99, 235, 0.2) 100%);
        color: white;
        border-left-color: #3b82f6;
        font-weight: 600;
    }

    .nav-link i:first-child {
        width: 22px;
        margin-right: 12px;
        text-align: center;
        font-size: 1.1rem;
    }

    .nav-link span {
        flex: 1;
    }

    .submenu-arrow {
        font-size: 0.7rem;
        transition: transform 0.3s ease;
        margin-left: 8px;
    }

    .has-submenu.open .submenu-arrow {
        transform: rotate(180deg);
    }

    .submenu {
        list-style: none;
        padding: 0;
        margin: 0;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.4s ease-out;
        background: rgba(0,0,0,0.25);
    }

    .has-submenu.open .submenu {
        max-height: 600px;
    }

    .submenu-link {
        display: flex;
        align-items: center;
        padding: 12px 20px 12px 55px;
        color: #cbd5e1;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.9rem;
        border-left: 3px solid transparent;
    }

    .submenu-link:hover {
        background: rgba(96, 165, 250, 0.1);
        color: white;
        padding-left: 60px;
        border-left-color: #60a5fa;
    }

    .submenu-link i {
        width: 18px;
        margin-right: 10px;
        font-size: 0.9rem;
    }

    .badge {
        padding: 3px 8px;
        font-size: 0.65rem;
        border-radius: 12px;
        margin-left: 8px;
        font-weight: 600;
        animation: pulse 2s infinite;
    }

    /* Scrollbar Styling */
    .sidebar::-webkit-scrollbar {
        width: 6px;
    }

    .sidebar::-webkit-scrollbar-track {
        background: rgba(0,0,0,0.2);
    }

    .sidebar::-webkit-scrollbar-thumb {
        background: rgba(255,255,255,0.3);
        border-radius: 3px;
    }

    .sidebar::-webkit-scrollbar-thumb:hover {
        background: rgba(255,255,255,0.4);
    }

    /* Animations */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.7;
        }
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .sidebar {
            transform: translateX(-100%);
        }

        .sidebar.open {
            transform: translateX(0);
        }

        .sidebar-overlay {
            display: block;
        }

        .sidebar-overlay.show {
            opacity: 1;
        }
    }
</style>

<script>
    $(document).ready(function() {
        // Toggle submenu
        $('.has-submenu > .nav-link').click(function(e) {
            e.preventDefault();
            $(this).parent().toggleClass('open');
        });

        // Set active menu item
        var currentPath = window.location.pathname;
        $('.nav-link, .submenu-link').each(function() {
            var href = $(this).attr('href');
            if (href && href !== '#' && href !== 'javascript:void(0)') {
                if (currentPath.indexOf(href) > -1 || href === currentPath) {
                    $(this).addClass('active');
                    $(this).closest('.has-submenu').addClass('open');
                }
            }
        });

        // Close sidebar when clicking overlay (mobile)
        $('#sidebarOverlay').click(function() {
            closeSidebar();
        });
    });

    function closeSidebar() {
        $('#sidebar').removeClass('open');
        $('#sidebarOverlay').removeClass('show');
    }
</script>
