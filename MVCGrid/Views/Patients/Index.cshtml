@model List<DentalCareManagmentSystem.Application.DTOs.PatientDto>
@{
    ViewData["Title"] = "Patients";
}

<div class="container-fluid">
    <!-- Header with Actions -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-users"></i> Patients</h2>
                <div>
                    <button class="btn btn-success" onclick="showCreate()">
                        <i class="fas fa-plus"></i> Add New Patient
                    </button>
                    <button class="btn btn-outline-primary" onclick="refreshGrid()">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" id="searchInput" class="form-control" 
                               placeholder="Search by name, phone..." 
                               onkeypress="if(event.keyCode==13) performSearch()" />
                        <button class="btn btn-primary" onclick="performSearch()">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <button class="btn btn-secondary" onclick="clearSearch()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Grid -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body" id="gridContainer">
                    @await Html.PartialAsync("_PatientsGrid", Model)
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for CRUD operations -->
<div class="modal fade" id="crudModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="crudModalLabel">Patient</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="crudModalBody">
                <!-- Dynamic content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let crudModal;

        $(document).ready(function() {
            // Initialize modal
            crudModal = new bootstrap.Modal(document.getElementById('crudModal'));

            // Setup AJAX form handler for patient forms
            UIHelpers.ajaxFormHandler('.patient-form', function(response) {
                refreshGrid();
            });
        });

        // Show Create Form
        function showCreate() {
            UIHelpers.loadModal('@Url.Action("Create")', 'Add New Patient');
        }

        // Show Edit Form
        function showEdit(id) {
            UIHelpers.loadModal('@Url.Action("Edit")/' + id, 'Edit Patient');
        }

        // Show Delete Confirmation
        function showDelete(id) {
            UIHelpers.loadModal('@Url.Action("Delete")/' + id, 'Delete Patient');
        }

        // Show Details - Navigate to Details page
        function showDetails(id) {
            window.location.href = '@Url.Action("Details")/' + id;
        }

        // Create Appointment for Patient
        function createAppointment(id, name) {
            window.location.href = '@Url.Action("Create", "Appointments")?patientId=' + id;
        }

        // Perform Search
        function performSearch() {
            var searchTerm = $('#searchInput').val();
            UIHelpers.reloadGridPartial(
                '#gridContainer',
                '@Url.Action("GetPatientsGrid")',
                { searchString: searchTerm }
            );
        }

        // Clear Search
        function clearSearch() {
            $('#searchInput').val('');
            refreshGrid();
        }

        // Refresh Grid
        function refreshGrid() {
            UIHelpers.reloadGridPartial('#gridContainer', '@Url.Action("GetPatientsGrid")');
        }
    </script>
}
