@model List<DentalCareManagmentSystem.Application.DTOs.PatientDto>
@{
    ViewData["Title"] = "Patients";
}

@* Anti-forgery token for delete operations *@
@Html.AntiForgeryToken()

<div class="container-fluid">
    <!-- Header with Actions -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-users"></i> Patients</h2>
                <div>
                    <button class="btn btn-success" onclick="showCreate()">
                        <i class="fas fa-plus"></i> Add New Patient
                    </button>
                </div>
            </div>
            <hr />
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" id="searchInput" class="form-control" 
                               placeholder="Search by name, phone..." 
                               onkeypress="if(event.keyCode==13) performSearch()" />
                        <button class="btn btn-primary" onclick="performSearch()">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <button class="btn btn-secondary" onclick="clearSearch()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Grid -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body" id="gridContainer">
                    @await Html.PartialAsync("_PatientsGrid", Model)
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Listen for modal success events
            $(document).on('modalSuccess', function(event, response) {
                // Refresh the grid when patient is created/updated/deleted
                refreshGrid();
            });

            console.log('Patients page initialized');
        });

        // Show Create Form using Global Modal
        function showCreate() {
            ModalLoader.load('@Url.Action("Create")', 'Add New Patient');
        }

        // Show Edit Form using Global Modal
        function showEdit(id) {
            ModalLoader.load('@Url.Action("Edit")/' + id, 'Edit Patient');
        }

        // Show Details using Global Modal
        function showDetails(id) {
            ModalLoader.load('@Url.Action("Details")/' + id, 'Patient Details');
        }

        // Create Appointment for Patient using Global Modal
        function createAppointment(patientId, patientName) {
            ModalLoader.load(
                '@Url.Action("Create", "Appointments")?patientId=' + patientId,
                'New Appointment for ' + patientName
            );
        }

        // Delete Patient - Using toastr warning confirmation
        function deletePatient(id, name) {
            toastr.warning(
                '<div style="margin-top: 10px;">' +
                '<p style="margin-bottom: 15px; font-size: 14px;">Are you sure you want to delete <strong>' + name + '</strong>?</p>' +
                '<p style="margin-bottom: 15px; color: #dc3545; font-size: 13px;"><i class="fas fa-exclamation-triangle"></i> This action cannot be undone!</p>' +
                '<button type="button" class="btn btn-danger btn-sm me-2" onclick="confirmDeletePatient(\'' + id + '\', \'' + name + '\')">Yes, Delete</button>' +
                '<button type="button" class="btn btn-secondary btn-sm" onclick="toastr.clear()">Cancel</button>' +
                '</div>',
                'Delete Patient?',
                {
                    closeButton: false,
                    timeOut: 0,
                    extendedTimeOut: 0,
                    tapToDismiss: false,
                    allowHtml: true,
                    positionClass: "toast-top-center",
                    toastClass: "toastr-confirm"
                }
            );
        }

        // Confirm Delete Patient
        function confirmDeletePatient(id, name) {
            toastr.clear();
            
            $.ajax({
                url: '@Url.Action("DeleteConfirmed")',
                type: 'POST',
                data: {
                    id: id,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        toastr.success(response.message);
                        refreshGrid();
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function() {
                    toastr.error('Failed to delete patient. Please try again.');
                }
            });
        }

        // Perform Search
        function performSearch() {
            var searchTerm = $('#searchInput').val();
            $.ajax({
                url: '@Url.Action("GetPatientsGrid")',
                type: 'GET',
                data: { searchString: searchTerm },
                beforeSend: function() {
                    $('#gridContainer').css('opacity', '0.5');
                },
                success: function(html) {
                    $('#gridContainer').html(html).css('opacity', '1');
                },
                error: function() {
                    $('#gridContainer').css('opacity', '1');
                    toastr.error('Search failed. Please try again.');
                }
            });
        }

        // Clear Search
        function clearSearch() {
            $('#searchInput').val('');
            refreshGrid();
        }

        // Refresh Grid
        function refreshGrid() {
            var searchTerm = $('#searchInput').val();
            $.ajax({
                url: '@Url.Action("GetPatientsGrid")',
                type: 'GET',
                data: { searchString: searchTerm },
                beforeSend: function() {
                    $('#gridContainer').css('opacity', '0.5');
                },
                success: function(html) {
                    $('#gridContainer').html(html).css('opacity', '1');
                },
                error: function() {
                    $('#gridContainer').css('opacity', '1');
                }
            });
        }
    </script>
    
    <style>
        /* Custom toastr confirmation styles */
        .toastr-confirm {
            width: 400px !important;
            padding: 20px !important;
        }
        
        .toastr-confirm .toast-message {
            padding: 0 !important;
        }
    </style>
}
