@model DentalCareManagmentSystem.Application.DTOs.PatientDto

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">
        <i class="fas fa-exclamation-triangle"></i> Confirm Delete
    </h4>
    <p>Are you sure you want to delete this patient? This action cannot be undone and will remove all associated data.</p>
</div>

<div class="row mb-3">
    <div class="col-md-3 fw-bold">Patient ID:</div>
    <div class="col-md-9"><code>@Model.Id</code></div>
</div>

<div class="row mb-3">
    <div class="col-md-3 fw-bold">Full Name:</div>
    <div class="col-md-9">@Model.FullName</div>
</div>

<div class="row mb-3">
    <div class="col-md-3 fw-bold">Phone:</div>
    <div class="col-md-9">@Model.Phone</div>
</div>

<div class="row mb-3">
    <div class="col-md-3 fw-bold">Age:</div>
    <div class="col-md-9">@Model.Age years old</div>
</div>

<div class="row mb-3">
    <div class="col-md-3 fw-bold">Gender:</div>
    <div class="col-md-9">@Model.Gender</div>
</div>

<form id="deleteForm" onsubmit="return submitDeleteForm('@Model.Id')">
    @Html.AntiForgeryToken()
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times"></i> Cancel
        </button>
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete Patient
        </button>
    </div>
</form>

<script>
    function submitDeleteForm(id) {
        $.ajax({
            url: '@Url.Action("DeleteConfirmed")/' + id,
            type: 'POST',
            data: $('#deleteForm').serialize(),
            success: function(result) {
                if (result.success) {
                    crudModal.hide();
                    showAlert(result.message, 'success');
                    refreshGrid();
                } else {
                    showAlert(result.message || 'Failed to delete patient', 'error');
                }
            },
            error: function() {
                showAlert('An error occurred while deleting the patient', 'error');
            }
        });
        
        return false;
    }
</script>
