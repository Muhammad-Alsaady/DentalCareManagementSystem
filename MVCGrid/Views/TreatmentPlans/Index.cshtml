@model List<DentalCareManagmentSystem.Application.DTOs.TreatmentPlanDto>
@{
    ViewData["Title"] = "Treatment Plans";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Treatment Plans</h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Patient Name</th>
                                        <th>Created Date</th>
                                        <th>Created By</th>
                                        <th>Total Cost</th>
                                        <th>Items Count</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var plan in Model.OrderByDescending(p => p.CreatedAt))
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Patients" asp-action="Details" asp-route-id="@plan.PatientId">
                                                    @plan.PatientName
                                                </a>
                                            </td>
                                            <td>@plan.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>@plan.CreatedBy</td>
                                            <td><strong>@plan.TotalCost.ToString("C")</strong></td>
                                            <td>
                                                <span class="badge bg-info">@plan.Items.Count items</span>
                                            </td>
                                            <td>
                                                @if (plan.IsCompleted)
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">In Progress</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>

                                                @if (!plan.IsCompleted)
                                                {
                                                    <button class="btn btn-sm btn-primary add-item-btn"
                                                            data-plan-id="@plan.Id">
                                                        <i class="fas fa-plus"></i> Add Item
                                                    </button>

                                                    <button class="btn btn-sm btn-success complete-plan-btn"
                                                            data-plan-id="@plan.Id">
                                                        <i class="fas fa-check"></i> Complete
                                                    </button>

                                                    <!-- زر تطبيق الخصم -->
                                                    <button class="btn btn-sm btn-warning apply-discount-btn"
                                                            data-plan-id="@plan.Id">
                                                        <i class="fas fa-percent"></i> Apply Discount
                                                    </button>
                                                }

                                                @if (User.IsInRole("SystemAdmin"))
                                                {
                                                    <button class="btn btn-sm btn-danger delete-plan-btn"
                                                            data-plan-id="@plan.Id">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3"><strong>Total:</strong></td>
                                        <td><strong>@Model.Sum(p => p.TotalCost).ToString("C")</strong></td>
                                        <td colspan="3"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            No treatment plans found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).on('click', '.add-item-btn', function () {
            var planId = $(this).data('plan-id');
            $.get('@Url.Action("AddItem")', { planId: planId }, function (data) {
                $('#modalContainer').html(data);
                $('#actionModal').modal('show');
            });
        });

        $(document).on('click', '.complete-plan-btn', function () {
            var planId = $(this).data('plan-id');
            if (confirm('Are you sure you want to mark this treatment plan as completed?')) {
                $.post('@Url.Action("Complete")',
                    {
                        id: planId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    function (response) {
                        if (response.success) {
                            showAlert('success', response.message);
                            location.reload();
                        } else {
                            showAlert('danger', response.message);
                        }
                    }
                );
            }
        });

        $(document).on('click', '.delete-plan-btn', function () {
            var planId = $(this).data('plan-id');
            if (confirm('Are you sure you want to delete this treatment plan? This action cannot be undone.')) {
                $.post('@Url.Action("Delete")',
                    {
                        id: planId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    function (response) {
                        if (response.success) {
                            showAlert('success', response.message);
                            location.reload();
                        } else {
                            showAlert('danger', response.message);
                        }
                    }
                );
            }
        });

        // زر تطبيق الخصم
        $(document).on('click', '.apply-discount-btn', function () {
            var planId = $(this).data('plan-id');
            var percentage = prompt("Enter discount percentage (0-100):");

            if (percentage !== null) {
                percentage = parseFloat(percentage);
                if (isNaN(percentage) || percentage < 0 || percentage > 100) {
                    alert("Invalid percentage value!");
                    return;
                }

                $.post('@Url.Action("ApplyDiscount", "Payments")',
                    {
                        planId: planId,
                        percentage: percentage,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    function (response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    }
                );
            }
        });
    </script>
}

